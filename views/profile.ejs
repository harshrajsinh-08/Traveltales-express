<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TravelTales - Full Profile</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Profile Header -->
    <header
      class="relative pt-24 pb-16 overflow-hidden"
      style="
        background-image: url('https://images.unsplash.com/photo-1506197603052-3cc9c3a201bd');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
      "
    >
      <!-- Dark overlay for text readability (consistent with homepage) -->
      <div class="absolute inset-0 bg-black/40"></div>

      <!-- Content -->
      <div id="profile-header" class="relative container mx-auto px-4 z-10">
        <!-- Dynamic header content injected here -->
      </div>
    </header>

    <!-- Profile Content -->
    <section
      class="container mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-3 gap-8"
    >
      <!-- Travel Stats & Account Settings -->
      <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Travel Stats</h2>
        <div id="travel-stats"></div>
      </div>

      <!-- Personal Information -->
      <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Personal Information</h2>
        <div id="personal-info" class="space-y-3"></div>
      </div>

      <!-- Upcoming Trips -->
      <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Upcoming Trips</h2>
        <ul id="upcoming-trips" class="space-y-4"></ul>
      </div>
    </section>

    <!-- Recent Activity Section -->
    <section class="container mx-auto px-4 pb-8">
      <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
        <div
          id="recent-activity"
          class="grid grid-cols-1 md:grid-cols-3 gap-4"
        ></div>
      </div>
    </section>

    <!-- My Posts -->
    <section class="container mx-auto px-4 py-16">
      <h2 class="text-2xl font-bold mb-8">My Travel Stories</h2>
      <div id="my-posts" class="grid grid-cols-1 md:grid-cols-3 gap-8"></div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Full Profile Script -->
    <script src="/full-profile.js"></script>
  </body>
</html>
