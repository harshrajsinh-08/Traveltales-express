<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TravelTales - Full Profile</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Profile Header -->
  <header id="profile-header" class="pt-24 pb-12 bg-orange-500 container mx-auto px-4">
    <!-- Dynamic header content injected here -->
  </header>

  <!-- Profile Content -->
  <section class="container mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Travel Stats -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-bold mb-4">Travel Stats</h2>
      <div id="travel-stats"></div>
    </div>

    <!-- Upcoming Trips -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-bold mb-4">Upcoming Trips</h2>
      <ul id="upcoming-trips" class="space-y-4"></ul>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
      <div id="recent-activity" class="space-y-4"></div>
    </div>
  </section>

  <!-- My Posts -->
  <section class="container mx-auto px-4 py-16">
    <h2 class="text-2xl font-bold mb-8">My Travel Stories</h2>
    <div id="my-posts" class="grid grid-cols-1 md:grid-cols-3 gap-8"></div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Full Profile Script -->
  <script src="/nodev/public/full-profile.js"></script>
</body>
</html>