<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - TravelTales</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        margin: 0;
        font-family: "Poppins", sans-serif;
        background: url("https://images.unsplash.com/photo-1506197603052-3cc9c3a201bd")
          no-repeat center center/cover;
        height: 100vh;
      }

      /* Dark overlay */
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 0;
      }

      /* Glassmorphism card */
      .signup-card {
        position: relative;
        z-index: 1;
        backdrop-filter: blur(12px);
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .signup-card input {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
      }

      .signup-card input::placeholder {
        color: rgba(255, 255, 255, 0.7);
      }

      .signup-card input:focus {
        outline: none;
        border-color: #f97316;
        box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.2);
      }
    </style>
  </head>
  <body class="flex justify-center items-center">
    <form
      action="/auth/signup"
      method="POST"
      class="signup-card p-8 rounded-2xl shadow-2xl w-96 space-y-6"
    >
      <!-- Error Message -->
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-500 text-white text-sm p-3 rounded mb-4 text-center">
        <%= error %>
      </div>
      <% } %>

      <!-- Success Message -->
      <% if (typeof success !== 'undefined' && success) { %>
      <div class="bg-green-500 text-white text-sm p-3 rounded mb-4 text-center">
        <%= success %>
      </div>
      <% } %>

      <h2 class="text-3xl font-bold text-center text-white">Create Account</h2>

      <input
        type="text"
        name="name"
        placeholder="Full Name"
        required
        class="w-full px-4 py-3 rounded-lg"
      />
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="w-full px-4 py-3 rounded-lg"
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="w-full px-4 py-3 rounded-lg"
      />

      <button
        class="w-full bg-orange-500 hover:bg-orange-600 text-white px-4 py-3 rounded-lg font-medium transition"
      >
        Sign Up
      </button>

      <!-- Divider -->
      <div class="flex items-center justify-center my-4">
        <span class="h-px bg-white/40 w-1/3"></span>
        <span class="text-white/80 px-3 text-sm">or</span>
        <span class="h-px bg-white/40 w-1/3"></span>
      </div>

      <!-- Google Signup Button -->
      <a
        href="/auth/google"
        class="flex items-center justify-center gap-2 bg-white text-gray-700 font-medium px-4 py-3 rounded-lg hover:bg-gray-100 transition"
      >
        <img
          src="https://developers.google.com/identity/images/g-logo.png"
          alt="Google"
          class="w-5 h-5"
        />
        Sign up with Google
      </a>

      <p class="text-center text-sm text-white mt-4">
        Already have an account?
        <a href="/login" class="text-orange-400 hover:underline">Login</a>
      </p>
    </form>
  </body>
</html>
