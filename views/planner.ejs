<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Travel Planner - TravelTales</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body { font-family: "Poppins", sans-serif; }
  </style>
</head>
<body class="bg-gray-50">

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Page Header -->
  <header class="bg-orange-500 text-white py-16 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Travel Planner</h1>
      <p class="text-xl">Plan your perfect trip to India</p>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-16">
    
    <!-- Trip Planning Form -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
      
      <!-- Planning Form -->
      <div class="lg:col-span-2 bg-white rounded-xl shadow-md p-8">
        <h2 class="text-2xl font-bold mb-6">Plan Your Trip</h2>
        
        <form id="trip-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Destination</label>
              <input type="text" id="destination" name="destination" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Enter destination" required>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Duration (days)</label>
              <input type="number" id="days" name="days" min="1" max="30" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Number of days" required>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
              <input type="date" id="start-date" name="start-date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" required>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Budget (₹)</label>
              <input type="number" id="budget" name="budget" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Total budget">
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Travel Style</label>
            <select id="travel-style" name="travel-style" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
              <option value="budget">Budget Travel</option>
              <option value="mid-range">Mid-range</option>
              <option value="luxury">Luxury</option>
              <option value="backpacking">Backpacking</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Interests</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
              <label class="flex items-center">
                <input type="checkbox" value="culture" class="mr-2 text-orange-500">
                <span class="text-sm">Culture</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="adventure" class="mr-2 text-orange-500">
                <span class="text-sm">Adventure</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="food" class="mr-2 text-orange-500">
                <span class="text-sm">Food</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="nature" class="mr-2 text-orange-500">
                <span class="text-sm">Nature</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="history" class="mr-2 text-orange-500">
                <span class="text-sm">History</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="beaches" class="mr-2 text-orange-500">
                <span class="text-sm">Beaches</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="mountains" class="mr-2 text-orange-500">
                <span class="text-sm">Mountains</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" value="shopping" class="mr-2 text-orange-500">
                <span class="text-sm">Shopping</span>
              </label>
            </div>
          </div>

          <button type="submit" class="w-full bg-orange-500 hover:bg-orange-600 text-white py-3 px-6 rounded-lg font-medium transition">
            Generate Trip Plan
          </button>
        </form>
      </div>

      <!-- Quick Actions -->
      <div class="space-y-6">
        
        <!-- Budget Calculator -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-bold mb-4">Budget Calculator</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm text-gray-600 mb-1">Accommodation/day</label>
              <input type="number" id="acc-cost" placeholder="₹2000" class="w-full px-3 py-2 border rounded-lg text-sm">
            </div>
            <div>
              <label class="block text-sm text-gray-600 mb-1">Food/day</label>
              <input type="number" id="food-cost" placeholder="₹800" class="w-full px-3 py-2 border rounded-lg text-sm">
            </div>
            <div>
              <label class="block text-sm text-gray-600 mb-1">Transport</label>
              <input type="number" id="transport-cost" placeholder="₹5000" class="w-full px-3 py-2 border rounded-lg text-sm">
            </div>
            <div>
              <label class="block text-sm text-gray-600 mb-1">Activities/day</label>
              <input type="number" id="activity-cost" placeholder="₹1000" class="w-full px-3 py-2 border rounded-lg text-sm">
            </div>
            <button onclick="calculateBudget()" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg text-sm transition">
              Calculate
            </button>
            <div id="budget-result" class="text-center font-bold text-lg text-orange-500"></div>
          </div>
        </div>

        <!-- Weather Widget -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-bold mb-4">Weather Check</h3>
          <div class="space-y-3">
            <input type="text" id="weather-city" placeholder="Enter city name" class="w-full px-3 py-2 border rounded-lg text-sm">
            <button onclick="checkWeather()" class="w-full bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-lg text-sm transition">
              Check Weather
            </button>
            <div id="weather-result" class="text-sm text-gray-600"></div>
          </div>
        </div>

        <!-- Currency Converter -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-bold mb-4">Currency Converter</h3>
          <div class="space-y-3">
            <div class="grid grid-cols-2 gap-2">
              <select id="from-currency" class="px-3 py-2 border rounded-lg text-sm">
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="GBP">GBP</option>
                <option value="INR" selected>INR</option>
              </select>
              <select id="to-currency" class="px-3 py-2 border rounded-lg text-sm">
                <option value="USD" selected>USD</option>
                <option value="EUR">EUR</option>
                <option value="GBP">GBP</option>
                <option value="INR">INR</option>
              </select>
            </div>
            <input type="number" id="amount" placeholder="Amount" class="w-full px-3 py-2 border rounded-lg text-sm">
            <button onclick="convertCurrency()" class="w-full bg-purple-500 hover:bg-purple-600 text-white py-2 px-4 rounded-lg text-sm transition">
              Convert
            </button>
            <div id="conversion-result" class="text-sm text-gray-600"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Generated Trip Plan -->
    <div id="trip-plan" class="hidden bg-white rounded-xl shadow-md p-8">
      <h2 class="text-2xl font-bold mb-6">Your Trip Plan</h2>
      <div id="plan-content"></div>
    </div>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="/script.js"></script>
  <script src="/navbar.js"></script>
  <script src="/planner.js"></script>
</body>
</html>